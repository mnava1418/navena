<!--Services Section-->
<section id="services" style="background-color: whitesmoke;">
    <div class="banner-main-container banner-section" style="height: auto;">
        <div class="banner-center-container">
            <h2>Servicios</h2>
            <p>Conoce nuestros servicios con los cuales podrás mejorar tu porcentaje de grasa, porcentaje de músculo, rendimiento deportivo y estudios de laboratorio.</p>
            <div class="services-container">
                {{#services}}
                <div class="card service-item" style="position: static; margin: 40px; padding-bottom: 16px;">
                    <img src="{{img}}" class="card-img-top" style="height: 180px;" alt="...">
                    <div class="card-body">
                        <h5 class="card-title" style="margin:8px">{{name}}</h5>
                        <h5 class="card-title" style="margin:8px;">{{price}}</h5>
                        <ul class="check-list generic-text" style="font-size: 0.8em;">
                            {{#each items}}
                            <li>
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle-fill icon-list" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                </svg>
                                {{this}}
                            </li>
                            {{/each}}
                        </ul>
                        <a href="https://api.whatsapp.com/send?text=¡Hola%20Navena!&phone=525527542800" class="btn-main btn-navena-secondary">Agenda tu cita</a>
                    </div>
                </div>
                {{/services}}
            </div>
        </div>
    </div>
</section>
<!--End Services Section-->